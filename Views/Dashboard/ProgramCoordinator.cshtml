<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="text-center mb-5">

        <h1 class="hero-h1">Welcome back, @Context.Session.GetString("EmployeeName")!</h1>

        <p class="text-muted">
            Today is <span id="currentDate"></span> | Role: @Context.Session.GetString("Role")
        </p>
    </div>

    <!-- Stats Section -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-person-check display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Claims to Verify</h5>
                <p class="card-text">@Model.PendingCount Pending</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-clock-history display-5 feature-icon"></i>
                <h5 class="card-title mt-3">In Progress</h5>
                <p class="card-text">@Model.InProgress Claims</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-check2-square display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Verified</h5>
                <p class="card-text">@Model.VerifiedCount Claims</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-exclamation-triangle display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Issues</h5>
                <p class="card-text">@Model.RejectedCount Claims</p>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card bg-dark text-light mb-4">
        <div class="card-header border-bottom border-secondary">
            <h5 class="mb-0">Recent Verifications</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-dark text-light">Claim #102 verified - Lecturer A</li>
                <li class="list-group-item bg-dark text-light">Claim #103 flagged for correction - Lecturer B</li>
                <li class="list-group-item bg-dark text-light">Claim #104 verified - Lecturer C</li>
            </ul>
        </div>
    </div>

    <!-- Shortcuts Section -->
    <div class="row g-4">
        <!-- Verify Claims Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 verify-claims-card" style="cursor: pointer;">
                <i class="bi bi-check-circle display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Verify Claims</h5>
                <p class="card-text">Review and verify lecturer claim submissions.</p>
            </div>
        </div>
        

        <!-- Verify Claims Section (Hidden by default) -->
        <div id="verifyClaimsSection" class="mt-4" style="display: none;">
            <form id="antiForgeryForm">
                @Html.AntiForgeryToken()
            </form>

            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="mb-4 text-info">Pending Claims for Verification</h4>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Lecturer</th>
                                    <th>Date Submitted</th>
                                    <th>Hours Worked</th>
                                    
                                    <th>Document</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model.Claims)
                                {
                                    <tr>
                                        <td>@c.ClaimID</td>
                                        <td>@(c.Employee?.Name ?? "—")</td>
                                        <td>@c.ClaimDate.ToString("yyyy-MM-dd")</td>
                                        <td>@c.HoursWorked</td>
                                        

                                        <!-- Document column -->
                                        <td>
                                            @if (c.SupportingDocuments != null && c.SupportingDocuments.Any() == true)
                                            {
                                                var doc = c.SupportingDocuments.First();
                                                <a asp-controller="Dashboard" asp-action="DownloadDocument" asp-route-id="@doc.DocumentID" class="btn btn-sm btn-outline-info">View</a>
                                                <div class="small text-muted mt-1">@System.IO.Path.GetFileName(doc.FilePath)</div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No document</span>
                                            }
                                        </td>

                                        <td>
                                            @if (c.IsDeleted)
                                            {
                                                <span class="badge bg-secondary">Deleted</span>
                                            }
                                            else if (c.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else if (c.Status == "Verified" || c.Status == "Verified")
                                            {
                                                <span class="badge bg-success">@c.Status</span>
                                            }
                                            else if (c.Status == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@c.Status</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!c.IsDeleted && (c.Status == "Pending" || c.Status == "PendingApproval"))
                                            {
                                                <form asp-action="VerifyClaim" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="claimId" value="@c.ClaimID" />
                                                    <button class="btn btn-success btn-sm">Verify</button>
                                                </form>
                                                <form asp-action="RejectClaim" method="post" class="d-inline ms-1">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="claimId" value="@c.ClaimID" />
                                                    <button class="btn btn-danger btn-sm">Reject</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No actions</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeVerifyClaims" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>


@model CoordinatorDashboardViewModel

@{
    ViewData["Title"] = "Coordinator Dashboard";
}


<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="text-center mb-5">

        <h1 class="hero-h1">Welcome back, @Context.Session.GetString("EmployeeName")!</h1>

        <p class="text-muted">
            Today is <span id="currentDate"></span> | Role: @Context.Session.GetString("Role")
        </p>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-5 text-center">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="bi bi-clipboard-check display-6 text-info"></i>
                    <h5 class="mt-3">Claims Submitted</h5>
                    <h2 class="fw-bold">@ViewBag.TotalClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="bi bi-hourglass-split display-6 text-warning"></i>
                    <h5 class="mt-3">Verified</h5>
                    <h2 class="fw-bold">@ViewBag.VerifiedClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="bi bi-check-circle display-6 text-success"></i>
                    <h5 class="mt-3">Approved</h5>
                    <h2 class="fw-bold">@ViewBag.ApprovedClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="bi bi-x-circle display-6 text-danger"></i>
                    <h5 class="mt-3">Rejected</h5>
                    <h2 class="fw-bold">@ViewBag.RejectedClaims</h2>
                </div>
            </div>
        </div>
    </div>

   

    <!-- Shortcuts Section -->
    <div class="row g-4">
        <!-- Verify Claims Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 verify-claims-card" style="cursor: pointer;">
                <i class="bi bi-check-circle display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Verify Claims</h5>
                <p class="card-text">Verify lecturer claim.</p>
            </div>
        </div>
        

        <!-- Verify Claims Section (Hidden by default) -->
        <div id="verifyClaimsSection" class="mt-4" style="display: none;">
            <form id="antiForgeryForm">
                @Html.AntiForgeryToken()
            </form>

            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="mb-4 text-info">Pending Claims for Verification</h4>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Lecturer</th>
                                    <th>Date Submitted</th>
                                    <th>Hours Worked</th>
                                    <th>Document</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>

                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeVerifyClaims" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Manage Lecturers Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 manage-lecturers-card" style="cursor: pointer;">
                <i class="bi bi-people display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Manage Lecturers</h5>
                <p class="card-text">Oversee lecturers in your department.</p>
            </div>
        </div>

        <!-- Reports Section (Hidden by default) -->
        <div id="reportsSection" class="mt-4" style="display: none;">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="text-info mb-3">Approved Claims</h4>

                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle" id="approvedClaimsTable">
                            <thead>
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Lecturer</th>
                                    <th>Hours Worked</th>
                                    <th>Date Submitted</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Will be populated dynamically -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeReports" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reports Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 reports-card">
                <i class="bi bi-bar-chart display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Reports</h5>
                <p class="card-text">View claim reports.</p>
            </div>
        </div>

        <!-- Reports Section (Hidden by default) -->
        <div id="reportsSection" class="mt-4" style="display: none;">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="text-info mb-3">Claim & Verification Reports</h4>

                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Report ID</th>
                                    <th>Lecturer</th>
                                    <th>Hours Worked</th>
                                    <th>Date Submitted</th>
                                    <th>Status</th>
                                    <th>Verified By</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                            </tbody>
                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeReports" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
</div>
<!-- Quick Links -->
<div class="row g-4 text-center">
    <div class="col-md-4">
        <div class="card quick-link-card">
            <div class="card-body">
                <i class="bi bi-person-circle display-6 text-info"></i>
                <h5 class="mt-2">Profile Settings</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card quick-link-card">
            <div class="card-body">
                <i class="bi bi-question-circle display-6 text-info"></i>
                <h5 class="mt-2">Help Center</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card quick-link-card">
            <div class="card-body">
                <i class="bi bi-box-arrow-right display-6 text-danger"></i>
                <h5 class="mt-2"><a asp-area="" asp-controller="Home" asp-action="Login_Register">Log Out</a></h5>

            </div>
        </div>
    </div>
</div>

<script>
        document.addEventListener('DOMContentLoaded', function () {
        const reportsCard = document.querySelector('.reports-card');
        const reportsSection = document.getElementById('reportsSection');
        const tbody = document.querySelector('#approvedClaimsTable tbody');

        async function loadApprovedClaims() {
            if (!tbody) return;
            tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Loading...</td></tr>';

            try {
                const res = await fetch('/Coordinator/GetClaimsForVerification', {
                    method: 'GET',
                    credentials: 'same-origin'
                });

                if (!res.ok) throw new Error('Failed to fetch claims');

                const data = await res.json();
                if (!data.success || !Array.isArray(data.data)) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center text-danger">Failed to load claims.</td></tr>';
                    return;
                }

                // Filter approved claims
                    const approvedClaims = data.data.filter(c => {
        const status = (c.Status ?? c.status ?? '').trim().toLowerCase();
        return status === 'approved';
    });

                if (approvedClaims.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">No approved claims found.</td></tr>';
                    return;
                }

                tbody.innerHTML = '';
                approvedClaims.forEach(c => {
                    const claimId = c.ClaimID ?? c.claimID ?? '';
                    const employeeName = c.EmployeeName ?? c.employeeName ?? (c.employee && (c.employee.Name || c.employee.name)) ?? '';
                    const claimDate = c.ClaimDate ?? c.claimDate ?? '';
                    const hoursWorked = c.HoursWorked ?? c.hoursWorked ?? '';
                    const total = c.TotalAmount?? c.totalAmount?? '' ; // Assuming Total = HoursWorked; adjust if different
                    const documentId = c.DocumentID ?? c.documentID ?? null;
                    const documentName = c.DocumentName ?? c.documentName ?? '';

                    const docCell = documentId
                        ? `<a href="/Dashboard/DownloadDocument/${encodeURIComponent(documentId)}" target="_blank" class="btn btn-sm btn-outline-info">View</a><div class="small text-muted mt-1">${documentName}</div>`
                        : '<span class="text-muted">No doc</span>';

                    tbody.innerHTML += `
                        <tr>
                            <td>${claimId}</td>
                            <td>${employeeName}</td>
                            <td>${hoursWorked}</td>
                            <td>${claimDate}</td>
                            <td>${total.toLocaleString('en-ZA', { style: 'currency', currency: 'ZAR' })}</td>
                            <td><span class="badge bg-success">Approved</span></td>
                        </tr>
                    `;
                });

            } catch (err) {
                console.error(err);
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-danger">Error loading approved claims</td></tr>';
            }
        }

        if (reportsCard && reportsSection) {
            reportsCard.addEventListener('click', function () {
                reportsSection.style.display = 'block';
                loadApprovedClaims();
                reportsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });
        }
    });
</script>

<script src="~/js/coordinator.js"></script>
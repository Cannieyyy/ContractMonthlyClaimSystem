@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="text-center mb-5">

        <h1 class="hero-h1">Welcome back, @Context.Session.GetString("EmployeeName")!</h1>

        <p class="text-muted">
            Today is <span id="currentDate"></span> | Role: @Context.Session.GetString("Role")
        </p>
    </div>

    <!-- Stats Section -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-check2-square display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Claims to Verify</h5>
                <p class="card-text">15 Pending</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-people display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Coordinators</h5>
                <p class="card-text">4 Active</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-bar-chart-line display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Reports</h5>
                <p class="card-text">Monthly & Yearly</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center p-3">
                <i class="bi bi-exclamation-triangle display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Issues</h5>
                <p class="card-text">2 Claims</p>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card bg-dark text-light mb-4">
        <div class="card-header border-bottom border-secondary">
            <h5 class="mb-0">Recent Approvals</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-dark text-light">Claim #102 Verified - Lecturer A</li>
                <li class="list-group-item bg-dark text-light">Claim #103 flagged for correction - Coordinator B</li>
                <li class="list-group-item bg-dark text-light">Claim #104 Verified - Lecturer C</li>
            </ul>
        </div>
    </div>

    <!-- Shortcuts Section -->
    <div class="row g-4">
        <!-- Verify Claims Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 Verify-claims-card" style="cursor: pointer;">
                <i class="bi bi-folder-check display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Verify Claims</h5>
                <p class="card-text">Verify and Verify claims submitted by coordinators.</p>
            </div>
        </div>

        <!-- Verify Claims Section (Hidden by default) -->
        <div id="VerifyClaimsSection" class="mt-4" style="display: none;">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="mb-4 text-info">Claims Pending Approval</h4>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Claim ID</th>
                                    <th>Coordinator</th>
                                    <th>Lecturer</th>
                                    <th>Hours Worked</th>
                                    <th>Date Submitted</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample Data -->
                                <tr>
                                    <td>CLM010</td>
                                    <td>Coordinator A</td>
                                    <td>Kopano Leshope</td>
                                    <td>25</td>
                                    <td>2025-09-02</td>
                                    <td><span class="badge bg-warning">Pending Approval</span></td>
                                    <td>
                                        <button class="btn btn-success btn-sm">Verify</button>
                                        <button class="btn btn-danger btn-sm">Reject</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>CLM011</td>
                                    <td>Coordinator B</td>
                                    <td>Keoagile Mafora</td>
                                    <td>18</td>
                                    <td>2025-09-04</td>
                                    <td><span class="badge bg-warning">Pending Approval</span></td>
                                    <td>
                                        <button class="btn btn-success btn-sm">Verify</button>
                                        <button class="btn btn-danger btn-sm">Reject</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeVerifyClaims" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card feature-card text-center p-4">
                <i class="bi bi-people display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Manage Coordinators</h5>
                <p class="card-text">Add/remove coordinators per department.</p>
            </div>
        </div>
        <!-- Reports Card -->
        <div class="col-md-4">
            <div class="card feature-card text-center p-4 reports-card" style="cursor: pointer;">
                <i class="bi bi-bar-chart display-5 feature-icon"></i>
                <h5 class="card-title mt-3">Reports</h5>
                <p class="card-text">Generate claim and verification reports.</p>
            </div>
        </div>

        <!-- Reports Section (Hidden by default) -->
        <div id="reportsSection" class="mt-4" style="display: none;">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <h4 class="mb-4 text-info">Reports</h4>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Report ID</th>
                                    <th>Claim ID</th>
                                    <th>Submitted By</th>
                                    <th>Hours Worked</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample Data -->
                                <tr>
                                    <td>RPT001</td>
                                    <td>CLM001</td>
                                    <td>Kopano Leshope</td>
                                    <td>20</td>
                                    <td><span class="badge bg-success">Verified</span></td>
                                    <td>2025-09-01</td>
                                </tr>
                                <tr>
                                    <td>RPT002</td>
                                    <td>CLM002</td>
                                    <td>Keoagile Mafora</td>
                                    <td>15</td>
                                    <td><span class="badge bg-warning">Pending</span></td>
                                    <td>2025-09-03</td>
                                </tr>
                                <tr>
                                    <td>RPT003</td>
                                    <td>CLM003</td>
                                    <td>Andiswa Dube</td>
                                    <td>22</td>
                                    <td><span class="badge bg-danger">Rejected</span></td>
                                    <td>2025-09-05</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Cancel Button -->
                    <div class="text-end mt-3">
                        <button id="closeReports" class="btn btn-outline-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        document.addEventListener('DOMContentLoaded', function () {
        const VerifyClaimsCard = document.querySelector('.Verify-claims-card');
        const VerifyClaimsSection = document.getElementById('VerifyClaimsSection');
        const closeVerifyClaims = document.getElementById('closeVerifyClaims');

        if (VerifyClaimsCard && VerifyClaimsSection && closeVerifyClaims) {
            // Show section on card click
            VerifyClaimsCard.addEventListener('click', function () {
                VerifyClaimsSection.style.display = 'block';
                VerifyClaimsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });

            // Hide section on cancel button click
            closeVerifyClaims.addEventListener('click', function () {
                VerifyClaimsSection.style.display = 'none';
                VerifyClaimsCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
            });
        }
    });

        document.addEventListener('DOMContentLoaded', function () {
        const reportsCard = document.querySelector('.reports-card');
        const reportsSection = document.getElementById('reportsSection');
        const closeReports = document.getElementById('closeReports');

        if (reportsCard && reportsSection && closeReports) {
            // Show reports section on card click
            reportsCard.addEventListener('click', function () {
                reportsSection.style.display = 'block';
                reportsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });

            // Hide reports section on cancel button click
            closeReports.addEventListener('click', function () {
                reportsSection.style.display = 'none';
                reportsCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
            });
        }
    });

        // Get current date
    const today = new Date();

    // Format options
    const options = { year: 'numeric', month: 'long', day: 'numeric' };

    // Format the date
    const formattedDate = today.toLocaleDateString('en-US', options);

    // Insert it into the span
    document.getElementById('currentDate').textContent = formattedDate;
</script>
@{
    ViewData["Title"] = "Home Page";
}

    <!-- Hero Section -->

    
    <div class="hero-section text-center my-5 text-white ">
        <h1 class="display-3 fw-bold ">Time2Pay</h1>
        <p class="lead ">The Contract Monthly Claim System (CMCS)</p>
        <p class="mb-4">Streamlining claim submissions, verifications, and approvals for lecturers and managers.</p>
        <a class="btn btn-primary btn-lg mx-2 hero-btn" asp-controller="Home" asp-action="Login_Register">Login</a>
        <a class="btn btn-outline-primary btn-lg mx-2 hero-btn-outline" asp-controller="Home" asp-action="Login_Register">Register</a>
    </div>


    <!-- About Section -->
<div class="container my-5 py-5 about-section">
    <h2 class="text-center mb-4">About Time2Pay</h2>
    <p class="text-center mx-auto about-text">
        Time2Pay is designed to simplify the monthly claim process for Independent Contractor (IC) lecturers.
        With role-based dashboards, coordinators and managers can seamlessly verify and Verify claims,
        ensuring accuracy and efficiency.
    </p>
</div>

<div class="container my-5 py-5 features-section">
    <h2 class="text-center mb-5">Key Features</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card feature-card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text display-4 feature-icon"></i>
                    <h5 class="card-title mt-3">Submit Claims</h5>
                    <p class="card-text">Lecturers can easily submit their monthly work claims online.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-upload display-4 feature-icon"></i>
                    <h5 class="card-title mt-3">Upload Documents</h5>
                    <p class="card-text">Attach required supporting documents in PDF format.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-check-circle display-4 feature-icon"></i>
                    <h5 class="card-title mt-3">Verify & Verify</h5>
                    <p class="card-text">Coordinators verify and managers Verify claims seamlessly.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card feature-card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line display-4 feature-icon"></i>
                    <h5 class="card-title mt-3">Track Status</h5>
                    <p class="card-text">Monitor the progress of claims from submission to approval.</p>
                </div>
            </div>
        </div>
    </div>
</div>

    

